<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="30dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/sfproregular"
            android:text="Hello, Damian"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hello"
            android:layout_alignStart="@+id/hello"
            android:fontFamily="@font/sfprobold"
            android:text="Your RV110W is out of stocks!"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/hello"
            app:layout_constraintTop_toBottomOf="@id/hello" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hello"
            android:layout_alignStart="@+id/hello"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sfprobold"
            android:text="Beranda"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/hello"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="330dp"
            android:layout_height="160dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_bg_report"
            app:layout_constraintLeft_toLeftOf="@id/tv_welcome"
            app:layout_constraintTop_toBottomOf="@id/tv_dashboard"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/tv_hariini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprobold"
                android:text="Hari ini"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemi"
                android:text="@string/tanggaldashboard"
                android:textSize="20sp"
                android:textColor="#D9D9D9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_hariini"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/tv_viewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfproregular"
                android:text="View all"
                android:textSize="15sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/tv_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprobold"
                android:text="00000"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_hariini"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"

                />

            <TextView
                android:id="@+id/tv_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprosemi"
                android:text="Items"
                android:textSize="20sp"
                android:textColor="#D9D9D9"
                app:layout_constraintTop_toBottomOf="@id/tv_item_count"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>