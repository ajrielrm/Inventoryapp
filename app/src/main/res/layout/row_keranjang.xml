<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_row_keranjang"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="30dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_image_item_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_router"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_name_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sspbold"
            android:text="@string/item_inventory_name"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/iv_image_item_keranjang"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_brand_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemi"
            android:text="Cisco"
            app:layout_constraintStart_toStartOf="@+id/tv_item_name_keranjang"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_name_keranjang" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_txt_location_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/sfprosemi"
            android:text="Location"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/tv_brand_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_location_keranjang"
            android:layout_width="116dp"
            android:layout_height="12dp"
            android:fontFamily="@font/sfprosemi"
            android:text="My Warehouse 1 - Rack 2"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tv_txt_location_keranjang"
            app:layout_constraintTop_toBottomOf="@+id/tv_txt_location_keranjang" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_barcode_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/barcode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_barcode_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprosemi"
            android:text="GDA-2020050"
            android:textColor="@color/black"
            android:textSize="7sp"
            app:layout_constraintBottom_toTopOf="@+id/iv_barcode_keranjang"
            app:layout_constraintEnd_toEndOf="@+id/iv_barcode_keranjang"
            app:layout_constraintStart_toStartOf="@+id/iv_barcode_keranjang" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_text_harga_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/sfprosemi"
            android:text="Harga"
            app:layout_constraintBottom_toBottomOf="@+id/tv_txt_location_keranjang"
            app:layout_constraintStart_toEndOf="@+id/tv_txt_location_keranjang"
            app:layout_constraintTop_toTopOf="@+id/tv_txt_location_keranjang" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_harga_keranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp12.000.000"
            android:fontFamily="@font/sspbold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tv_text_harga_keranjang"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_harga_keranjang" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>
